@model CheckOutViewModel

@{
    ViewBag.Title = "Check Out";
}

<form asp-controller="Book" asp-action="CheckOut" method="post" class="mt-3">

    <input asp-for="Id" type="hidden" />

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MobileNumber" class="form-control" value="Mobile Number" placeholder="Mobile Number" />
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="NationalId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NationalId" class="form-control" value="National Id" placeholder="National Id" />
            <span asp-validation-for="NationalId" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Date of Checke Out" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="ReturnDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ReturnDate" class="form-control" placeholder="Return Date" />
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group row">
        <div class="col-sm-10 ">
            <button type="submit" class="btn btn-primary">Check Out</button>
        </div>
    </div>
</form>
